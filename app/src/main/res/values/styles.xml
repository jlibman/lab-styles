<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/uwpurple</item>
        <item name="android:colorPrimaryDark">@color/uwgold</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?android:colorPrimary</item>
    </style>

    <style name="LabelStyle" parent="@style/TextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BackgroundStyle" parent="@style/LabelStyle">
        <item name="android:background">?android:colorPrimaryDark</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/MediaButton">
        <item name="android:textSize">22sp</item>
    </style>
</resources>
